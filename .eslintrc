{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
      "comma-dangle": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-curly-spacing": [2, "always"],
      "no-console": 0,
      "react/require-default-props": 0,
      "arrow-body-style": ["error", 'as-needed'],
      "indent": ["error", 2],
      "react/jsx-closing-bracket-location": 1,
      "no-confusing-arrow": 0
    }
}
